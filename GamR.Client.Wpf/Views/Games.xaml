<UserControl x:Class="GamR.Client.Wpf.Views.Games"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Grid>
    <ListView ItemsSource="{Binding Games}">
        <ListView.View>
            <GridView>
                    <GridViewColumn Header="Melder" DisplayMemberBinding="{Binding MeldingPlayersString}"/>
                    <GridViewColumn Header="Melding" DisplayMemberBinding="{Binding Melding}"/>
                    <GridViewColumn Header="Tricks" DisplayMemberBinding="{Binding NumberOfTricks}"/>
                    <GridViewColumn Header="Vips" DisplayMemberBinding="{Binding NumberOfVips}"/>
                    <GridViewColumn Header="ActualTricks" DisplayMemberBinding="{Binding ActualNumberOfTricks}"/>
                    <GridViewColumn Header="Scores" DisplayMemberBinding="{Binding PlayerScores}"/>
                </GridView>
        </ListView.View>
    </ListView>
</Grid>
</UserControl>
    
    